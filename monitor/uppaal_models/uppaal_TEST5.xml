// Internal parameters
int fastSpeedPenalityIndex = 2;
int slowSpeedPenalityIndex = 1;
int counter = 0;


// Guard functions
bool isCenter()
{
    return (-1*F &lt;= trackPos &amp;&amp; trackPos &lt;= 1*F);
}

bool isLimitRoad()
{   
    return ((-2*F &lt; trackPos &amp;&amp; trackPos &lt; -1*F) || (1*F &lt; trackPos &amp;&amp; trackPos &lt; 2*F));
}

bool isRightOffRoad()
{
    return (trackPos &gt;= 2*F);
}

bool isLeftOffRoad()
{
    return (trackPos &lt;= -2*F);
}

// Update functions

void rewardLimitRoad(){
    reward = 0;
}

void rewardLeftOffRoad(){
    reward = -10;
}

void rewardRightOffRoad(){
    reward = -10;
}

void rewardCenter(){
    reward = +20;
}
